{
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "user",
        "ClusterId": "userservice",
        "Match": {
          "Path": "/users/{**catch-all}"
        }
      },
      {
        "RouteId": "product",
        "ClusterId": "productservice",
        "Match": {
          "Path": "/products/{**catch-all}"
        }
      },
      {
        "RouteId": "order",
        "ClusterId": "orderservice",
        "Match": {
          "Path": "/orders/{**catch-all}"
        }
      },
      {
        "RouteId": "payment",
        "ClusterId": "paymentservice",
        "Match": {
          "Path": "/payments/{**catch-all}"
        }
      }
    ],
    "Clusters": {
      "userservice": {
        "Destinations": {
          "d1": { "Address": "http://userservice" }
        }
      },
      "productservice": {
        "Destinations": {
          "d1": { "Address": "http://productservice" }
        }
      },
      "orderservice": {
        "Destinations": {
          "d1": { "Address": "http://orderservice" }
        }
      },
      "paymentservice": {
        "Destinations": {
          "d1": { "Address": "http://paymentservice" }
        }
      }
    }
  }
}
